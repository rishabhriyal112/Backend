<%- include('partials/head') %>
</head>
<body class="min-h-screen bg-gray-50">
    <%- include('partials/nav') %>
    <main class="max-w-4xl mx-auto px-6 py-12">
        <div class="bg-white rounded-xl shadow-lg p-10">
            <h2 class="text-4xl font-bold text-gray-800 text-center mb-10">Our Registered Homes</h2>
            
            <% if (registeredHomes && registeredHomes.length > 0) { %>
                <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8">
                    <% registeredHomes.forEach(home => { %>
                        <div class="bg-gradient-to-br from-blue-50 to-indigo-100 border-2 border-blue-200 rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                            <% if (home.image) { %>
                                <img src="<%= home.image %>" alt="<%= home.houseName %>" class="w-full h-56 object-cover">
                            <% } else { %>
                                <div class="w-full h-56 bg-gradient-to-br from-gray-300 to-gray-400 flex items-center justify-center">
                                    <span class="text-white text-6xl">üè†</span>
                                </div>
                            <% } %>
                            <div class="p-6">
                                <h3 class="text-2xl font-bold text-gray-900 mb-4"><%= home.houseName %></h3>
                                
                                <div class="space-y-3">
                                    <div class="flex items-center text-gray-700">
                                        <span class="text-blue-600 mr-2 text-lg">üìç</span>
                                        <span class="font-medium"><%= home.location || 'Location not specified' %></span>
                                    </div>
                                    
                                    <div class="flex items-center text-gray-700">
                                        <span class="text-yellow-500 mr-2 text-lg">‚≠ê</span>
                                        <span class="font-medium"><%= home.rating || 'No rating' %> / 5</span>
                                    </div>
                                    
                                    <div class="bg-green-100 rounded-lg p-3 mt-4">
                                        <p class="text-2xl font-bold text-green-700 text-center">
                                            $<%= home.price || '0' %>
                                            <span class="text-sm font-normal text-green-600">/ night</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-12">
                    <div class="text-gray-400 text-6xl mb-4">üè†</div>
                    <p class="text-gray-500 text-lg">No homes registered yet</p>
                    <p class="text-gray-400 text-sm mt-2">Click "Add Home" to register your first property</p>
                </div>
            <% } %>
        </div>
    </main>
</body>
</html>
