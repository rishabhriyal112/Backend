<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-50">
    <%- include('../partials/nav') %>
    <main class="max-w-4xl mx-auto px-6 py-12">
        <div class="bg-white rounded-xl shadow-lg p-10">
            <h2 class="text-4xl font-bold text-gray-800 text-center mb-10">Here are our favourites : </h2>
            
            <% if (favouriteHomes && favouriteHomes.length > 0) { %>
                <div class="space-y-6">
                    <% favouriteHomes.forEach(home => { %>
                        <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow">
                            <% if (home.image) { %>
                                <img src="<%= home.image %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-lg mb-4">
                            <% } else { %>
                                <div class="w-full h-48 bg-gray-200 rounded-lg mb-4 flex items-center justify-center">
                                    <span class="text-gray-400 text-4xl">üè†</span>
                                </div>
                            <% } %>
                            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= home.houseName %></h3>
                            <div class="space-y-2 text-sm text-gray-600">
                                <% if (home.location) { %>
                                    <p class="flex items-center">
                                        <span class="text-blue-500 mr-2">üìç</span>
                                        <%= home.location %>
                                    </p>
                                <% } %>
                                <% if (home.rating) { %>
                                    <p class="flex items-center">
                                        <span class="text-yellow-500 mr-2">‚≠ê</span>
                                        <%= home.rating %> / 5
                                    </p>
                                <% } %>
                                <% if (home.price) { %>
                                    <p class="text-lg font-semibold text-green-600 mt-3">
                                        $<%= home.price %> / night
                                    </p>
                                <% } %>
                            </div>
                            <form action="/favourites/delete/<%=home.id%>" method="POST">
                                <button class="mt-4 bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition-colors font-medium" type="submit">Remove from favourite</button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-12">
                    <div class="text-gray-400 text-6xl mb-4">üè†</div>
                    <p class="text-gray-500 text-lg">No Favourites </p>
                    <p class="text-gray-400 text-sm mt-2">Click "Add to Favourite" to pick your favourite home</p>
                </div>
            <% } %>
        </div>
    </main>
</body>
</html>
