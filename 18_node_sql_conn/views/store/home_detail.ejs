<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-100">
    <%- include('../partials/nav') %>
    
    <main class="max-w-4xl mx-auto px-6 py-8">
        <h1 class="text-4xl font-bold text-gray-900 text-center mb-8">Details of <%= home.houseName %></h1>
        <!-- Property Image -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8">
            <img src="<%= home.image %>" alt="<%= home.houseName %>" class="w-full h-80 object-cover">
            
            <!-- Property Info -->
            <div class="p-8">
                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= home.houseName %></h1>
                        <p class="text-xl text-gray-600 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                            </svg>
                            <%= home.location %>
                        </p>
                    </div>
                    <div class="text-right">
                        <div class="text-3xl font-bold text-green-600">$<%= home.price %></div>
                        <div class="text-gray-500">per night</div>
                    </div>
                </div>
                
                <!-- Rating Section -->
                <div class="flex items-center justify-center py-6 border-t border-b border-gray-200">
                    <div class="text-center">
                        <div class="flex items-center justify-center mb-2">
                            <span class="text-3xl font-bold text-yellow-500 mr-2"><%= home.rating %></span>
                            <div class="flex">
                                <% for(let i = 1; i <= 5; i++) { %>
                                    <svg class="w-6 h-6 <%= i <= home.rating ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                <% } %>
                            </div>
                        </div>
                        <p class="text-gray-600">Rating out of 5</p>
                    </div>
                </div>
                
                <!-- Description Section -->
                <div class="py-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Description</h3>
                    <p class="text-gray-700 leading-relaxed"><%= home.description %></p>
                </div>
                
                <%- include('../partials/favourite') %>
            </div>
        </div>
    </main>
</body>
</html>
