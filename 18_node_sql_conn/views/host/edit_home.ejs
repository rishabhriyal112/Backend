<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-50">
    <%- include('../partials/nav') %>
    <div class="flex flex-col items-center justify-center min-h-screen py-12">
        <div class="bg-white rounded-xl shadow-lg p-10 w-full max-w-md">
            <header class="mb-8">
                <h1 class="text-3xl font-bold text-green-600 text-center"><%= editing ? "Edit" : "Register" %> Your Home</h1>
            </header>
            <main>
                <form action="/host/<%= editing ? 'edit_home' : 'add-home' %>" method="POST" class="space-y-6">
                    <% if (editing) { %>
                        <input type="hidden" name="id" value="<%= home.id %>">
                    <% } %>
                    
                    <input type="text" name="houseName" value="<%= editing ? home.houseName : '' %>" placeholder="Enter the Name of the House" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <input type="text" name="price" value="<%= editing ? home.price : '' %>" placeholder="Enter the Price Per Night" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <input type="text" name="location" value="<%= editing ? home.location : '' %>" placeholder="Enter the Location of the House" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <input type="text" name="rating" value="<%= editing ? home.rating : '' %>" placeholder="Enter the Rating" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <input type="text" name="image" value="<%= editing ? home.image : '' %>" placeholder="Enter the Image URL" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <textarea name="description" placeholder="Enter the description" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"><%=editing ? home.description:''%></textarea>
                    <input type="submit" value="<%= editing ? 'Update Home' : 'Add Home' %>" class="w-full bg-green-500 text-white py-3 rounded-lg hover:bg-green-600 transition-colors cursor-pointer font-medium">
                </form>
            </main>
        </div>
    </div>
    
</body>
</html>
