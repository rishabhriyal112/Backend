<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-50">
    <%- include('../partials/nav') %>
    <main class="max-w-4xl mx-auto px-6 py-12">
        <div class="bg-white rounded-xl shadow-lg p-10">
            <h2 class="text-4xl font-bold text-gray-800 text-center mb-10">Here are our Registered Homes</h2>
            
            <% if (registeredHomes && registeredHomes.length > 0) { %>
                <div class="space-y-6">
                    <% registeredHomes.forEach(home => { %>
                        <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow">
                            <% if (home.image) { %>
                                <img src="<%= home.image %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-lg mb-4">
                            <% } else { %>
                                <div class="w-full h-48 bg-gray-200 rounded-lg mb-4 flex items-center justify-center">
                                    <span class="text-gray-400 text-4xl">ğŸ </span>
                                </div>
                            <% } %>
                            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= home.houseName %></h3>
                            <div class="space-y-2 text-sm text-gray-600">
                                <% if (home.location) { %>
                                    <p class="flex items-center">
                                        <span class="text-blue-500 mr-2">ğŸ“</span>
                                        <%= home.location %>
                                    </p>
                                <% } %>
                                <% if (home.rating) { %>
                                    <p class="flex items-center">
                                        <span class="text-yellow-500 mr-2">â­</span>
                                        <%= home.rating %> / 5
                                    </p>
                                <% } %>
                                <% if (home.price) { %>
                                    <p class="text-lg font-semibold text-green-600 mt-3">
                                        $<%= home.price %> / night
                                    </p>
                                <% } %>
                            </div>
                            <div class="flex gap-1 mt-4">
                                <a href="/details" class="px-3 py-1 bg-gray-500 text-white text-xs rounded hover:bg-gray-600 transition-colors no-underline">Details</a>
                                <button class="px-3 py-1 bg-blue-500 text-white text-xs rounded hover:bg-blue-600 transition-colors">Book</button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-12">
                    <div class="text-gray-400 text-6xl mb-4">ğŸ </div>
                    <p class="text-gray-500 text-lg">No homes registered yet</p>
                    <p class="text-gray-400 text-sm mt-2">Click "Add Home" to register your first property</p>
                </div>
            <% } %>
        </div>
    </main>
</body>
</html>
